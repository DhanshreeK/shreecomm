<div class="panel panel-primary">
            <div class="panel-heading">Employees Type Details
        </div>
 <div class="panel-body">
 <p id="notice"><%= notice %></p>
<%= link_to "Add New Employee Type",new_employee_type_path, class: 'btn red'%>
      <div class="graph">
                              <div class="tables">
                            
                                <table class="table table-bordered" style="overflow-y: auto;height: 300px;width:100%">
                <thead>
                                    <tr>
                                        <th><b>Name</b></th>
                                        <th colspan="5"></th>
                                    </tr>
                                 </thead>

                                  <tbody>
                                    <% @employee_types.each do |employee_type| %>
                                        <tr>
                                          <td><%= employee_type.name %></td>
                                          <td><%= link_to 'Show', employee_type%></td>
                                          <td><%= link_to 'Edit', edit_employee_type_path(employee_type) %></td>
                                          <td><%= link_to 'Destroy', employee_type, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
                                        </tr>
                                    <% end %>
                                 </tbody>
</table>
</div>
</div>